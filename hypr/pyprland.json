{
    "pyprland": {
        "plugins": [
            "scratchpads"
        ]
    },
    "scratchpads": {
        "term": {
            "command": "alacritty --class alacritty-dropterm",
            "animation": "fromTop",
            "unfocus": "hide"
        },
        

        "bard": {
            "command": "foot -a bard -e bard-cli -i",
            "animation": "fromTop",
            "unfocus": "hide"
        },
        "task": {
            "command": "foot -a task-tui -e /usr/bin/taskwarrior-tui",
            "unfocus": "hide",
            "animation": "fromRight"
        },
        "btop": {
            "command": "foot -a btop -e btop",
            "unfocus": "hide",
            "animation": "fromRight"
        }
    }
}
